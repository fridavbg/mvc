{% extends "base.html.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<div class="site-wrap">
		<h2>Card Hand</h2>
		<div class="card-container">
			{% for card in cardHand %}
				<ul class="card">
					{% if card.getSuite() == 'H'%}
						<li class="red-suit">♥</li>
					{% elseif card.getSuite() == 'S'%}
						<li class="black-suit">♠</li>
					{% elseif card.getSuite() == 'C'%}
						<li class="black-suit">♣</li>
					{% else %}
						<li class="red-suit">♦</li>
					{% endif %}
					<li>{{ card.getValue() }}</li>
				</ul>
			{% endfor %}
		</div>
		<h3>Cards left in deck:
			{{ leftOverDeck | length }}
		</h3>
		<h3>You have
			{{ cardHand | length }}
		</h3>
		<form>
			<fieldset>
				<p class="btn-container">
					{% if leftOverDeck | length > 0 %}
						<input type="submit" name="draw" value="Draw another card" class="btn">
					{% else %}
						{{ include('flash-message.html.twig') }}
						<input type="submit" name="shuffle" value="Shuffle new deck" class="btn">
					{% endif %}
				</p>
			</fieldset>
		</form>

		<code class="code">
			<h2>TEST BOX</h2>
			{# 
				{{dump(cardHand)}}
				{{dump(leftOverDeck)}}
			#}
		</code>

		<div class="btn-container">
			<a href="{{path("card-home")}}" class="btn">Go back</a>
		</div>

	</div>
{% endblock %}
