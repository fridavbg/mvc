{% extends "base.html.twig" %}

{% block title %}Draw a card{% endblock %}

{% block content %}
  <div class="site-wrap">
    <form method="post">
      <fieldset>
        <legend>Draw a card</legend>
        <div class="single-card-container">
          <ul class="card">
            {% if card[0].getSuite() == 'H'%}
              <li class="red-suit">♥</li>
            {% elseif card[0].getSuite() == 'S'%}
              <li class="black-suit">♠</li>
            {% elseif card[0].getSuite() == 'C'%}
              <li class="black-suit">♣</li>
            {% else %}
              <li class="red-suit">♦</li>
            {% endif %}
            <li>{{ card[0].getValue() }}</li>
          </ul>
          <h3>Cards left in deck:
            {{ deck | length }}</h3>
        </div>
        <p class="btn-container">
          <input type="submit" name="draw" value="Draw a new card" class="btn">
          {# <input type="submit" name="drawMultiple" value="Draw multiple cards" class="btn"> #}
        </p>

        {# {{ include('block/flash-message.html.twig') }} #}

      </fieldset>
    </form>

        <code class="code">
          <h2>TEST BOX</h2>
          {{dump(card)}}
        </code>

    <div class="btn-container">
      <a href="{{path("card-home")}}" class="btn">
        Go back
      </a>
    </div>

  </div>
{% endblock %}