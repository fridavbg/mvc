{% extends "base.html.twig" %}

{% block title %}
  {{title}}
{% endblock %}

{% block content %}
  <div class="site-wrap">
    {% if players is defined %}
      <div class="player-container">
        {% for player in players %}
          <div class="cardHand">
            <h2 class="player-title">Player
              {{loop.index}}
            </h2>
            {{dump(player)}}
          </div>
        {% endfor %}
      </div>
      <h3>Cards left in deck:
        {{ cards | length }}
      </h3>
    {% else %}
      <p>No numbers was chosen
      </p>
    {% endif %}

    {#   #}
    <code class="code">
      <h2>TEST BOX</h2>
      {{dump(players)}}
    </code>

    <div class="btn-container">
      <a href="{{path("card-home")}}" class="btn">
        Go back
      </a>
    </div>

  </div>
{% endblock %}